load("//bzl:rules.bzl", "bazel_lint")
load("//rs:rules.bzl", "rust_binary")

package(default_visibility = ["//visibility:public"])

rust_binary(
    name = "testing",
    srcs = glob(["*.rs"]),
    deps = ["//rs/ts"],
)

genrule(
    name = "output",
    outs = ["output.ts"],
    cmd = """
	echo '/* eslint-disable */' > $@
    $(location :testing) >> $@
    """,
    tools = [":testing"],
)

bazel_lint(name = "bazel_lint")
