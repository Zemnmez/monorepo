{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Rust: rust-project.json",
			"command": "bazelisk",
			"args": [
				"run",
				"//rs:gen_rust_project"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Python: Activate Venv",
			"command": "bazelisk",
			"args": [
				"run",
				"venv"
			],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
			},
		},
		{
			"label": "Sapling: install hooks",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode/prep:scm_conf",
				"--",
				"${workspaceFolder}"
			],
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
