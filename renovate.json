{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
    "automerge": true,
    "autodiscover": true,
	"platformAutomerge": true,
	"platformCommit": true,
	"allowScripts": true,
	"allowedPostUpgradeCommands": [
		"CARGO_BAZEL_REPIN=1 yarn bazel sync --only=cargo"
	],
	"packageRules": [
		{
			"matchLanguages": ["rust"],
			"postUpgradeTasks": {
				"commands": [
					"CARGO_BAZEL_REPIN=1 yarn bazel sync --only=cargo"
				]
			}
		}
	]
}
