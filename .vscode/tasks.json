{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Generate rust-project.json",
			"command": "bazelisk",
			"args": [
				"run",
				"//rs:gen_rust_project"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"panel": "dedicated",
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Check / install repo scripts to git / sapling",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode/prep:scm_conf",
				"--",
				"${workspaceFolder}"
			],
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}