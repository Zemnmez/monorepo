load("//bzl:rules.bzl", "bazel_lint")
load("//ts:rules.bzl", "ts_project")
load("//ts/next.js:rules.bzl", "next_project")

package(default_visibility = ["//ts/pulumi:__subpackages__"])

next_project(
    name = "next",
    srcs = [":next_ts"],
)

# bazel run //ts/pulumi/lulu.computer
# to test the website.
alias(
    name = "lulu.computer",
    actual = ":dev",
)

ts_project(
    name = "next_ts",
    srcs = glob([
        "app/*.tsx",
        "app/*.ts",
    ]),
    assets = glob(["app/*.css"]),
    deps = [
        "//:node_modules/@types/react",
        "//:node_modules/next",
        "//:node_modules/react",
        "//ts/next.js",
    ],
)

ts_project(
    name = "pulumi_ts",
    srcs = ["index.ts"],
    data = [":next"],
    visibility = ["//:__subpackages__"],
    deps = [
        "//:node_modules/@pulumi/aws",
        "//:node_modules/@pulumi/pulumi",
        "@monorepo//ts/pulumi/lib:tags_ts",
        "@monorepo//ts/pulumi/lib:website_ts",
    ],
)

bazel_lint(
    name = "bazel_lint",
    srcs = ["BUILD.bazel"],
)
