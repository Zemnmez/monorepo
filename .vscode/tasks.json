{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Rust: update rust-project.json when it changes.",
			"command": "bazelisk",
			"args": [
				"run",
				"--run_under",
				"cd ${workspaceFolder} &&",
				"//.vscode:ibazel",
				"run",
				"//.vscode:gen_rust_project"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"group": "editor",
				"close": false,
				"panel": "dedicated",
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Sapling: install hooks",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode:install_sapling_hooks",
				"--",
				"${workspaceFolder}"
			],
			"presentation": {
				"close": true,
				"group": "preprep",
				"reveal": "never",
				"panel": "dedicated",
			},
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Python: rebuild venv when it changes",
			"command": "bazelisk",
			"args": [
				"run",
				"--run_under",
				// this needs to be fixed. use a script.
				"cd ${workspaceFolder} &&",
				"//.vscode:ibazel",
				"run",
				"//.vscode:activate_venv"
			],
			"presentation": {
				"close": false,
				"group": "editor",
				"reveal": "never",
				"panel": "dedicated",
			},
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}