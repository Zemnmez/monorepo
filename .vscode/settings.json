{
	"typescript.tsdk": "node_modules\\typescript\\lib",
	"html.autoClosingTags": false,
	"editor.wordWrapColumn": 80,
	"editor.wordBasedSuggestions": "off",
	"[mdx]": {
		"editor.wordWrap": "bounded",
		"editor.wordWrapColumn": 80
	},
	"files.watcherExclude": {
		"**/.git/objects/**": true,
		"**/.git/subtree-cache/**": true,
		"**/node_modules/*/**": true,
		"**/.hg/store/**": true,
		"**/bazel-out": true
	},
	"githubPullRequests.ignoredPullRequestBranches": [
		"main"
	],
	"task.allowAutomaticTasks": "on",
	"rust-analyzer.procMacro.enable": true,
	"eslint.format.enable": true,
	"eslint.onIgnoredFiles": "warn",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"go.goroot": "${workspaceFolder}/bazel-${workspaceFolderBasename}/external/go_sdk",
	"go.toolsEnvVars": {
		"GOPACKAGESDRIVER": "${workspaceFolder}/.vscode/gopackagesdriver.sh"
	},
	"go.enableCodeLens": {
		"runtest": false
	},
	"gopls": {
		"build.directoryFilters": [
			"-bazel-bin",
			"-bazel-out",
			"-bazel-testlogs",
			"-bazel-mypkg",
		],
		"formatting.gofumpt": true,
		"formatting.local": "github.com/zemn-me/monorepo",
		"ui.completion.usePlaceholders": true,
		"ui.semanticTokens": true,
		"ui.codelenses": {
			"gc_details": false,
			"regenerate_cgo": false,
			"generate": false,
			"test": false,
			"tidy": false,
			"upgrade_dependency": false,
			"vendor": false
		},
	},
	"go.useLanguageServer": true,
	"go.buildOnSave": "off",
	"go.lintOnSave": "off",
	"go.vetOnSave": "off",
	"typescript.preferences.importModuleSpecifier": "non-relative",
	"go.alternateTools": {
		"go": "${workspaceFolder}/.vscode/go.sh"
	}
}
