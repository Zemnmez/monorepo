load("//ts:rules.bzl", "jest_test", "ts_project")
load("@bazel_skylib//rules:copy_file.bzl", "copy_file")

ts_project(
    name = "project",
    srcs = glob(["*.ts"]),
    deps = [
        "//:node_modules/@types/jest",
        "//:node_modules/@types/node",
    ],
)

jest_test(
    name = "tests",
    srcs = ["do_not_depend_on_typescript_test.js"],
    data = ["//ts/cmd/svgshot:package_inert.json"],
    deps = [":project"],
)

# since package.json is now used for module resolution
# (by esm), we have to copy the package.json so that
# it doesn't get interpreted. In future, this should
# probably extend the root package.json?
copy_file(
	name = "inert_package_json",
	src = "//ts/cmd/svgshot:package.json",
	out = "package_inert.json"
)
