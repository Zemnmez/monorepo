{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Rust: rust-project.json",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode:gen_rust_project"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"reveal": "never",
				"group": "preprep",
				"close": true,
				"panel": "dedicated",
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "Python: Venv",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode:ibazel",
				"run",
				"//.vscode:activate_venv"
			],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"close": true,
				"reveal": "never",
				"group": "preprep",
				"panel": "dedicated",
			},
			"isBackground": true,
			"problemMatcher": {
				"source": "venv",
				"severity": "info",
				"pattern": [],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "^iBazel +\\[[^\\]]+\\]: Notifying of changes$",
					"endsPattern": "^iBazel +\\[[^\\]]+\\]: Starting...$",
				}
			}
		},
		{
			"label": "Sapling: install hooks",
			"command": "bazelisk",
			"args": [
				"run",
				"//.vscode:install_sapling_hooks",
				"--",
				"${workspaceFolder}"
			],
			"presentation": {
				"close": true,
				"group": "preprep",
				"reveal": "never",
				"panel": "dedicated",
			},
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}